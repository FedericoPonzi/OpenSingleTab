{
  "name": "open-single-tab",
  "displayName": "OpenSingleTab",
  "version": "1.0.0",
  "description": "A browser extension to keep your tabs under control. Free and Open Source.",
  "author": "Federico Ponzi <me@fponzi.me>",
  "scripts": {
    "get-git-hash": "node scripts/get-git-hash.js",
    "dev": "npm run get-git-hash && plasmo dev",
    "build": "npm run get-git-hash && plasmo build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "plasmo": "^0.90.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.0.328",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.8",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.16",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "react-test-renderer": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "manifest": {
    "permissions": [
      "tabs",
      "storage"
    ],
    "background": {
      "service_worker": "src/background.js"
    }
  }
}
